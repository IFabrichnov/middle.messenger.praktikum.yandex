.form {
  display: flex;
  flex-direction: column;
  width: 100%;

  .form__input {
    display: flex;
    margin-bottom: 16px;
    flex-direction: column;
    font-size: 12px;
    color: #999
  }

  .form__input input {
    margin: 8px 0;
    border: none;
    outline: none;
    border-bottom: 1px solid #3369F3
  }

  .error-text {
    display: none;
  }
}

