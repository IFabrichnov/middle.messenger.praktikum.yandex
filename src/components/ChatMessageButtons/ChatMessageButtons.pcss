.chat-message {
  display: grid;
  grid-template-columns: min-content auto min-content;
  align-items: center;
  border-top: 1px solid #EAEAEA;
  padding: 10px 0;
  height: fit-content;

  &__attach {
    display: flex;
    height: fit-content;
    padding: 6px;
    align-items: center;
    border: none;
    cursor: pointer;
    border-radius: 32px;
    outline: none;
    background-color: transparent;

    &:hover {
      background-color: #EAEAEA;
    }
  }

  &__input-label {
    display: none;
  }

  &__input {
    border: none;
    border-radius: 30px;
    background: #EFEFEF;
    margin: 0 12px;
    padding: 10px 20px;
  }

  &__send-button {
    display: flex;
    height: fit-content;
    background-color: transparent;
    border: none;
    cursor: pointer;
    padding: 6px;
    align-items: center;
    outline: none;
  }
}
