.error-code {
  font-size: 40px;
  font-weight: 500;
  margin: 0;
}

.error-message {
  font-size: 20px;
  margin: 15px 0 50px 0;
  font-weight: 500;
  line-height: 20px;
}

.container_error {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  transform: translate(-50%, -50%);
  left: 50%;
  top: 50%;
}
