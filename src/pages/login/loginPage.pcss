.container {
  transform: translate(-50%, -50%);
  display: flex;
  top: 50%;
  left: 50%;
  position: absolute;
  flex-direction: column;
  align-items: center;
  background: #ffffff;
  width: 320px;
  padding: 24px;
  border-radius: 12px;
  box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.15);
}

.auth-title {
  font-size: 20px;
  line-height: 20px;
  font-weight: 500;
  text-align: center;
  margin: 16px 0 48px 0;
}
