<div class="chat-container">
  <div class="chat-list">
    <div class="profile-link-container">
      {{{ Ref }}}
    </div>
    <div class="chat-search-container">
      <input name="message" type="text" class="chat-search" placeholder="Поиск...">
    </div>
    {{# each ChatItems}}
      {{{this}}}
    {{/each}}
  </div>
  <div class="chat-window">
    <div class="chat-header">
      <div class="chat-header__info">
        <img class="chat-header__avatar" src="/avatar.png" alt="Avatar" />
        <p class="chat-header__name">Вадим</p>
      </div>
      <button class="chat-header__button"><img src="/etc.svg" alt="Еще"/></button>
    </div>

    <div class="chat-message-container">
      <div class="message-date">
        <span>19 июня</span>
      </div>
      <ul class="chat-message-list">
        {{{ ChatMessage }}}
      </ul>
    </div>
    {{{ ChatMessageButtons }}}
  </div>
</div>

